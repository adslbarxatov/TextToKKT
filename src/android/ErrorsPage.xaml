<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.ErrorsPage">

    <ScrollView>
        <StackLayout>
            <Label x:Name="HeaderLabel" />
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                <Label x:Name="SelectionLabel" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                    <Switch x:Name="OnlyNewErrors" />
                    <Label x:Name="OnlyNewErrorsLabel" />
                </StackLayout> 
            </StackLayout>
            
            <Button x:Name="KKTButton" />

            <Label x:Name="ErrorCodeLabel" />
            <Button x:Name="ErrorCodeButton" />

            <Label x:Name="ResultTextLabel" />
            <Label x:Name="ResultText" />

            <Label x:Name="Filler" />
        </StackLayout>
    </ScrollView>
</ContentPage>
